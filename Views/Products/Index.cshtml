@model IEnumerable<Fashioninventorysystem.Models.Product>

@{
    ViewData["Title"] = "Products";
}

<h1>Products</h1>

<p><button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#createModal">Create New</button></p>

<table class="table table-striped" style="background-color:#f8f0f5;">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Category</th>
            <th>Quantity</th>
            <th>Size</th>
            <th>Price</th>
            <th>Brand</th>
            <th>Color</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Product_name</td>
                <td>@item.Product_description</td>
                <td>@item.Product_category</td>
                <td>@item.Product_quantity</td>
                <td>@item.Size</td>
                <td>@item.Price</td>
                <td>@item.Brand</td>
                <td><span style="display:inline-block;width:20px;height:20px;background-color:@item.Color;border:1px solid #000;"></span> @item.Color</td>
                <td>
                    <button type="button" class="btn btn-warning me-2" style="padding: 0.5rem 1.2rem; font-size: 1rem;" data-bs-toggle="modal" data-bs-target="#editModal-@item.Product_id">
                        Edit
                    </button>
                    <a asp-action="Delete" asp-route-id="@item.Product_id" class="btn btn-danger" style="padding: 0.5rem 1.2rem; font-size: 1rem;">
                        Delete
                    </a>
                </td>

            </tr>

            <div class="modal fade" id="editModal-@item.Product_id" tabindex="-1" aria-hidden="true">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content">
                        <div class="modal-header"><h5 class="modal-title">Edit Product</h5><button type="button" class="btn-close" data-bs-dismiss="modal"></button></div>
                        <div class="modal-body">
                            <form asp-action="Edit" asp-controller="Products" asp-route-id="@item.Product_id" method="post">
                                <input type="hidden" name="Product_id" value="@item.Product_id" />
                                <input type="text" name="Product_name" value="@item.Product_name" class="form-control mb-2" placeholder="Name" />
                                <input type="text" name="Product_description" value="@item.Product_description" class="form-control mb-2" placeholder="Description" />
                                <select name="Product_category" class="form-control mb-2">
                                    <!option value="Shoes" @(item.Product_category == "Shoes" ? "selected" : "")>Shoes</!option>
                                    <!option value="Clothes" @(item.Product_category == "Clothes" ? "selected" : "")>Clothes</!option>
                                    <!option value="Accessories" @(item.Product_category == "Accessories" ? "selected" : "")>Accessories</!option>
                                    <!option value="Bags" @(item.Product_category == "Bags" ? "selected" : "")>Bags</!option>
                                </select>
                                <input type="number" name="Product_quantity" value="@item.Product_quantity" class="form-control mb-2" placeholder="Quantity" />
                                <input type="text" name="Size" value="@item.Size" class="form-control mb-2" placeholder="Size" />
                                <input type="number" step="0.01" name="Price" value="@item.Price" class="form-control mb-2" placeholder="Price" />
                                <input type="text" name="Brand" value="@item.Brand" class="form-control mb-2" placeholder="Brand" />
                                <input type="color" name="Color" value="@item.Color" class="form-control form-control-color mb-2" />
                                <div class="modal-footer"><button type="submit" class="btn btn-primary">Save</button><button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cancel</button></div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </tbody>
</table>

<div class="modal fade" id="createModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header"><h5 class="modal-title">Create Product</h5><button type="button" class="btn-close" data-bs-dismiss="modal"></button></div>
            <div class="modal-body">
                <form asp-action="Create" asp-controller="Products" method="post">
                    <input type="text" name="Product_name" class="form-control mb-2" placeholder="Name" />
                    <input type="text" name="Product_description" class="form-control mb-2" placeholder="Description" />
                    <select name="Product_category" class="form-control mb-2">
                        <!option value="">-- Select Category --</!option>
                        <!option value="Shoes">Shoes</!option>
                        <!option value="Clothes">Clothes</!option>
                        <!option value="Accessories">Accessories</!option>
                        <!option value="Bags">Bags</!option>
                    </select>
                    <input type="number" name="Product_quantity" class="form-control mb-2" placeholder="Quantity" />
                    <input type="text" name="Size" class="form-control mb-2" placeholder="Size" />
                    <input type="number" step="0.01" name="Price" class="form-control mb-2" placeholder="Price" />
                    <input type="text" name="Brand" class="form-control mb-2" placeholder="Brand" />
                    <input type="color" name="Color" class="form-control form-control-color mb-2" />
                    <div class="modal-footer"><button type="submit" class="btn btn-success">Save</button><button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button></div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
